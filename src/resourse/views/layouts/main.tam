<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,shrink-to-fit=no">
    <link rel="icon" sizes="57x57" href="/img/favicon-32x32.png">
    <link rel="stylesheet" href="/vendors/css/bootstrap.css">
    <link rel="stylesheet" href="/vendors/css/all.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/vendors/js/jquery-3.6.0.js" type="text/javascript"></script>
    <script src="/vendors/js/bootstrap.js"></script>
    <title>{{pageName}}</title>
</head>

<body class="canv">
    <div class="app">
        {{>header}}
        <div class="container">
            <nav aria-label="breadcrumb my-3">
                <ol class="breadcrumb">
                    {{#each breadcrumbs}}
                    <li class="breadcrumb-item"><a href="{{this.breadcrumbUrl}}">{{this.breadcrumbName}}</a></li>
                    {{/each}}
                </ol>
            </nav>
            {{{body}}}
        </div>
        {{>footer}}
    </div>
    <script src="/vendors/js/popper.js"></script>
    <script src="/vendors/js/jquery.validate.js"></script>
    <script src="/scripts/main.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        $(document).ready(function () {

            $(".form-loggin").validate(
                {
                    rulers: {
                        account: {
                            required: true,
                            minlength: 5,
                        },
                        password: {
                            required: true,
                            minlength: 8,
                        }
                    },
                    messages: {
                        account: "Tài khoản yêu cầu ít nhất 5 ký tự",
                        password: "Mật khẩu cũng yêu cầu 5 ký tự nhé"
                    }
                }
            );
            $(".form-register").validate({
                rulers: {
                    account: {
                        required: true,
                        minlength: 5,
                    },
                    password: {
                        required: true,
                        minlength: 5,
                    },
                    password_confirm: {
                        minlength: 5,
                        equalTo: "#input-password-reg"
                    }
                },
                messages: {
                    account: "Tài khoản yêu cầu ít nhất 5 ký tự",
                    password: "Mật khẩu cũng yêu cầu 5 ký tự nhé",
                    password_confirm:"Nhập lại mật khẩu giúp bạn nhớ lâu hơn"
                }
            }
            );
        });
        const socket = io();
    </script>
</body>

</html>